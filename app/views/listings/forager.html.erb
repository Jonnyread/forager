<%= render 'layouts/top_section' %> 

<% unless @listings.blank? %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th class="hidden-xs center">Image</th>
      <th class="center">Name</th>
      <th class="hidden-xs center">Description</th>
      <th class="hidden-xs center">Location</th>
      <th class="center">Price</th>
      <th class="center">Actions</th>
    </tr>
  </thead>
    <% @listings.each do |listing| %>
      <tr>
        <td class="hidden-xs center"><%= image_tag listing.image.url(:thumb) %></td>
        <td class=""><%= listing.name %></td>
        <td class="hidden-xs"><%= listing.description %></td>
        <td class="hidden-xs center"><%= listing.location %></td>
        <td class="center"><%= number_to_currency(listing.price) %></td>
        <td class="center">
          <div class="btn-group">
            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              Actions <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'View', listing %></li>
              <li><%= link_to 'Edit', edit_listing_path(listing) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
</table>

<% else %>

<h2> You don't have any items yet! </h2>

<% end %>
