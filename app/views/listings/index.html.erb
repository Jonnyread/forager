<% @listings.each do |listing| %>

<div class="col-md-3">
  <div class="center">
    <div class="thumbnail">
      <%= image_tag listing.image.url %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <!--
        <p>Description: <%= listing.description %></p>
        <p>Location: <%= listing.location %></p>
        `-->
        <p>Price: <%= number_to_currency(listing.price) %></p>
        <div class="row">
          <div class="col-md-6">
            <a href="#" class="btn btn-primary btn-block" role="button">Button</a>
          </div>
          <div class="col-md-6">
            <a href="#" class="btn btn-info btn-block" role="button">Button</a>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-12">
            <a href="#" class="btn btn-danger btn-block" role="button">Button</a></div>
            <%= link_to 'Show', listing, class: "btn btn-link" %>
            <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link"  %>
            <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %>
        </div>
      </div>
    </div>
  </div>
</div>


<% end %>





