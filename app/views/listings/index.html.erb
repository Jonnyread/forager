<div class="jumbotron hidden-xs">
  <h2>Delicious and healthy plants <br>foraged for your enjoyment.</h2>
  <p><small>Step out of the grocery store and into nature.</small></p>

  <% unless user_signed_in? %>  
    <%= link_to "Sign Up to Start your Adventure", new_user_registration_path, class: "btn btn-success" %>
  <% end %>

</div>

<%= render 'layouts/top_section' %> 

<% @listings.each do |listing| %>

<div class="col-md-3">
  <div class="center">
    <div class="thumbnail">
      <%= link_to image_tag(listing.image.url), listing %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <!--
        <p>Description: <%= listing.description %></p>
        <p>Location: <%= listing.location %></p>
        `-->
        <p><%= number_to_currency(listing.price) %></p>
        <p>Forgaged By: <%= listing.user.name %></p>
        <br>
      </div>
    </div>
  </div>
</div>


<% end %>




